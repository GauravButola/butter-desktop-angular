pt-content
  transition margin-left 0.2s ease-out

pt-page-header .title
  transition margin-left 0.2s ease-out

pt-sidebar
  max-width 100px
  min-width 0px
  z-index 9
  overflow visible
  user-select none
  height 100%

  &:hover
      nav
        width 180px !important

      .md-button span
        opacity 1

  &:hover ~ pt-content
    margin-left 80px

  nav
    padding-top 50px
    transition width 0.2s ease-out, left 0.5s ease-out
    min-width 60px !important
    width 60px !important
    max-width 180px !important
    height inherit
    background-color inherit

  .md-button
    cursor pointer
    line-height 60px
    padding 0px 0px 0px 10px
    max-height 60px
    text-transform none
    min-width 0px
    overflow hidden
    margin 0
    text-align left
    width 100%

    span
      opacity 0
      margin-left 10px
      transition opacity 0.3s ease-in

    span, md-icon
      padding 0px 5px 10px

  .md-button .md-ripple-container
    border-radius 0px !important

  button.md-button-moz-focus-inner
    padding 0
