pt-header
  z-index 15
  display block
  width 100vw
  height 35px
  position fixed
  padding-top: 5px
  padding-bottom: 5px
  text-align center
  -webkit-app-region: drag

  span
    opacity 0.9
    font-size 16px
    font-weight 500

  .os-controls

    float right
    padding-right 20px
    z-index 11

    md-icon
      width 16px
      height 16px
      margin-left 10px
      transition -webkit-filter 200ms ease-out

      &:hover
        -webkit-filter grayscale(100%)
